<!DOCTYPE html>
<html>
  <head>
    <title>Tour</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if session[:error] %>
      <p class="message error"><%= session.delete(:error) %></p>
    <% end %>

    <% if session[:success] %>
      <p class="message success"><%= session.delete(:success) %></p>
    <% end %>

    <%= yield %>

    <pre>
      <code>
        <%= session.to_hash %>
      </code>
    </pre>
  </body>
</html>
